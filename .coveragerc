[run]
branch = True
parallel = True
# Focus coverage on the currently tested simulator core; expand once the
# MCP/debugger suites import their modules during the unified run.
source =
    cpu
    decoder
    execute
    memory
    pyrv32_system
    syscalls
omit =
    tests/*
    asm_tests/*
    tests/c/*
    */__init__.py

[report]
show_missing = True
exclude_lines =
    pragma: no cover
    if __name__ == "__main__":
